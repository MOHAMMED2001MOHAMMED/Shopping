    </head>

    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">


                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="navbar-brand" href="/">Home</a>
                        </li>
                        <% if(isUser) {%>
                            <li class="nav-item active">
                                <a class="nav-link" href="/Cart">Cart </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Cart/Order">Order</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/profile">Profile</a>
                            </li>
                            <% } else {%>
                                <li class="nav-item">
                                    <a class="nav-link" href="/login">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="./Suinup">Sign Up</a>
                                </li>
                                <% } %>

                                    <% if(isAdmin){ %>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/Admin/Add-prodect">Add Prodect</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/Cart/MangeOrder">Mange Order</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="/User">Users</a>
                                        </li>
                                        <% } %>
                    </ul>


                    <% if(isUser){ %>
                        <form action="/logout" method="post" style="margin-left: 1%;">
                            <input type="submit" value="Logout" class="btn btn-danger">
                        </form>
                        <% } %>
                </div>
            </div>
        </nav>

        <br/>

        <div class="container">
            <div class="row">

                <% if(!prodect){ %>
                    <div class="alert alert-warning" role="alert">
                        Product Not Found
                    </div>
                    <% }else{ %>

                        <div class="container mt-4">
                            <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
                                <div class="card-header">
                                    <%= prodect.name %>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= prodect.type %>
                                    </h5>
                                    <p class="card-text">
                                        <%= prodect.description %>
                                    </p>
                                    <span class="badge rounded-pill bg-success">$<%= prodect.prise%></span>
                                </div>
                            </div>


                            <div class="card mt-2" style="width: 18rem; display: block;">
                                <img src="/<%= prodect.image  %>" class="card-img-top" alt="...">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= prodect.name%>
                                    </h5>
                                    <p class="card-text">
                                        <%= prodect.description %>
                                    </p>
                                    <a href="prodect/<%= prodect._id  %>" class="btn btn-warning ">Product Page</a>
                                    <br/>
                                    <span class="badge rounded-pill bg-success">$<%= prodect.prise%></span>
                                    <div class="container mt-2">
                                        <form action="/Cart" method="post">
                                            <input type="number" name="amunt" id="inputPassword6" class="form-control" aria-describedby="passwordHelpInline">
                                            <input type="hidden" name="price" value="<%= prodect.prise%> ">
                                            <input type="hidden" name="ID" value="<%= prodect._id %> ">
                                            <input type="hidden" name="name" value="<%= prodect.name%> ">
                                            <input type="hidden" name="redirect2" value="/">
                                            <button class="btn btn-dark mt-2" type="submit">Add To Cart</button>
                                        </form>
                                    </div>
                                </div>

                            </div>
                        </div>
            </div>




            <% } %>


    </body>

    </html>